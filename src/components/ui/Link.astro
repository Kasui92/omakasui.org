---
interface Props {
  href: string;
  external?: boolean;
  variant?: "default" | "primary" | "ghost";
  class?: string;
  [key: string]: any;
}

const {
  href,
  external = false,
  variant = "default",
  class: className,
  ...rest
} = Astro.props;

const variantClasses = {
  default: "text-[#89b29e] hover:text-[#7ba088]",
  primary: "text-[#89b29e] underline hover:text-[#7ba088]",
  ghost: "text-gray-300 hover:text-[#89b29e] hover:underline",
};

const externalProps = external
  ? { target: "_blank", rel: "noopener noreferrer" }
  : {};
---

<a
  href={href}
  class={`transition-colors duration-300 ${variantClasses[variant]} ${className || ""}`}
  {...externalProps}
  {...rest}
>
  <slot />
</a>
