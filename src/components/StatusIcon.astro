---
const { status } = Astro.props;

type Status = "archived" | "work-in-progress" | "stable" | "experimental";

const statusIcons: Record<Status, { icon: string; label: string }> = {
  archived: {
    icon: "nf-md-archive",
    label: "Archived",
  },
  "work-in-progress": {
    icon: "nf-md-crane",
    label: "Work in Progress",
  },
  stable: {
    icon: "nf-md-check",
    label: "Stable",
  },
  experimental: {
    icon: "nf-md-test_tube",
    label: "Experimental",
  },
} as const;

const statusIcon = (status: Status): string => {
  return statusIcons[status]?.icon ?? "";
};

const statusLabel = (status: Status): string => {
  return statusIcons[status]?.label ?? "";
};
---

<i
  class={`nf ${statusIcon(status)}`}
  title={statusLabel(status)}
  aria-label={statusLabel(status)}></i>
