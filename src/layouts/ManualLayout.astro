---
import Footer from "../components/layout/Footer.astro";

import "../styles/global.css";
import "../styles/manuals.css";

interface Props {
  title?: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta
      name="description"
      content="OmaKasui - A curated collection of opinionated post-installation scripts for Linux distributions"
    />
    <title>
      {title ? title : `Omakasui - Manuals`}
    </title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="shortcut icon" href="/favicon.svg" />

    <meta property="og:site_name" content="OmaKasui" />
    <meta
      property="og:title"
      content="OmaKasui - Post-Installation Scripts for Linux"
    />
    <meta
      property="og:description"
      content="A curated collection of opinionated post-installation scripts for Linux distributions"
    />
    <meta property="og:image" content="https://omakasui.org/omakasui.svg" />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:image:type" content="image/svg+xml" />
    <meta property="og:url" content="https://omakasui.org" />
    <meta property="og:type" content="website" />

    <meta
      name="twitter:title"
      content="OmaKasui - Post-Installation Scripts for Linux"
    />
    <meta
      name="twitter:description"
      content="A curated collection of opinionated post-installation scripts for Linux distributions"
    />
    <meta name="twitter:image" content="https://omakasui.org/omakasui.svg" />
    <meta
      name="twitter:image:alt"
      content="OmaKasui - Post-installation scripts for Linux distributions"
    />
    <meta name="twitter:card" content="summary_large_image" />

    <meta name="generator" content={Astro.generator} />
  </head>
  <body
    class="font-monospace flex min-h-screen flex-col bg-[#221e22] font-mono text-[14px] leading-[1.6] text-[#e0e0e0]"
  >
    <slot />
    <Footer />
  </body>
</html>
