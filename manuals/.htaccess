# Configuration for directory redirects without trailing slash
RewriteEngine On

# Redirect for directories without trailing slash - apply 301 redirect
RewriteCond %{REQUEST_FILENAME} -d
RewriteCond %{REQUEST_URI} !/$
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI}/ [R=301,L]

# Ensure index.html is served for directories
DirectoryIndex index.html

# Prevent direct access to .htaccess files
<Files ".htaccess">
Order allow,deny
Deny from all
</Files>
