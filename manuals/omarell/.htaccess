# Specific configuration for omarell folder
RewriteEngine On

# Redirect for access without trailing slash
RewriteCond %{REQUEST_FILENAME} -d
RewriteCond %{REQUEST_URI} !/$
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI}/ [R=301,L]

# Force the use of index.html as default page
DirectoryIndex index.html

# Prevent access to configuration files
<Files "config.js">
    Order allow,deny
    Allow from all
</Files>

<Files ".htaccess">
    Order allow,deny
    Deny from all
</Files>
